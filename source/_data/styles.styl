.v[data-class=v] {
	// .vsys {
	// display: none !important;
	// }
	.vwrap {
		border-color: #b2b2b5 !important;

		@media (prefers-color-scheme: dark) {
			border-color: #b2b2b5 !important;
		}
	}

	.veditor {
		resize: none !important;
	}

	.vcards {
		.vcard {
			padding: 15px 20px 0 20px;
			border-radius: 10px;
			margin-bottom: 15px;
			box-shadow: 0 0 4px 1px rgba(0, 0, 0, 0.12);
			transition: all 0.3s;

			@media (prefers-color-scheme: dark) {
				box-shadow: none;
				border: 1px solid hsla(0, 0%, 93%, 0.5);
			}

			&:hover {
				box-shadow: 0 0 8px 3px rgba(0, 0, 0, 0.12);
			}

			.vh {
				border-bottom: unset !important;

				.vcard {
					border: none;
					box-shadow: none;
				}
			}
		}
	}
}

#links {
	.links-content {
		margin-top: 1rem;
	}

	.link-navigation {
		display: flex;
		flex-flow: row wrap;
		justify-content: space-between;

		&::after {
			content: ' ';
			display: block;
			clear: both;
		}
	}

	.card {
		width: 300px;
		font-size: 1.1em;
		padding: 10px 20px;
		border-radius: 4px;
		transition-duration: 0.15s;
		margin-bottom: 1rem;
		display: flex;

		&&:hover {
			transform: scale(1.1);
			box-shadow: 0 2px 6px 0 rgba(0, 0, 0, 0.12), 0 0 6px 0 rgba(0, 0, 0, 0.04);
			// background: rgba(68, 68, 68, 0.12)
		}

		a {
			border: none;
		}

		.ava {
			width: 3rem !important;
			height: 3rem !important;
			margin: 0 !important;
			margin-right: 1em !important;
			border-radius: 50%;
			transition: transform 1s ease-out;
		}

		.card-header {
			font-style: italic;
			overflow: hidden;
			width: 236px;

			a {
				font-style: normal;
				color: #2bbc8a;
				font-weight: bold;
				text-decoration: none;

				&:hover {
					color: #d480aa;
					text-decoration: none;
				}
			}

			.info {
				font-style: normal;
				color: #a3a3a3;
				font-size: 14px;
				min-width: 0;
				text-overflow: ellipsis;
				overflow: hidden;
				white-space: nowrap;
			}
		}
	}

	span.focus-links {
		vertical-align: 1px;
		font-style: normal;
		margin-left: 10px;
		position: unset;
		left: 0;
		padding: 0 7px 0 5px;
		font-size: 11px;
		border-color: #42c02e;
		border-radius: 40px;
		line-height: 24px;
		height: 24px;
		color: #fff !important;
		background-color: #2bbc8a;
		display: inline-block;

		&:hover {
			background-color: #318024;
		}
	}
}